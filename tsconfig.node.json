{
  "compilerOptions": {
    "composite": true,
    "module": "esnext",
    "target": "ES5",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "baseUrl": ".",
    "types": ["vite/client"],

    "paths": {
      "@/*": ["src/*"],
      "#/*": ["types/*"]
    }
  },

  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "types/**/*.d.ts",
    "types/**/*.ts",
    "build/**/*.ts",
    "build/**/*.d.ts",
    "vite.config.ts"
  ]
}
